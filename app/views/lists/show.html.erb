<h1><%= @list.name %></h1>

<h2>Films dans cette liste</h2>

<% if @movies.any? %>
  <ul>
    <% @movies.each do |movie| %>
      <li>
        <%= movie.title %> - <%= movie.overview %>
        <%= image_tag movie.poster_url if movie.poster_url.present? %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Aucun film dans cette liste pour le moment.</p>
<% end %>

<!-- Lien pour ajouter un film à cette liste -->
<%= link_to 'Ajouter un film à cette liste', new_list_bookmark_path(@list), class: "btn btn-primary" %>
